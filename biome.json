{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["src/**/*.ts"],
    "ignore": []
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "recommended": true
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noNonNullAssertion": "info",
        "useAsConstAssertion": "error"
      },
      "suspicious": {
				"noConsole": "info",
        "noExplicitAny": "info",
				"noExtraNonNullAssertion": "error",
				"noMisleadingInstantiator": "error",
				"noUnsafeDeclarationMerging": "error",
				"useNamespaceKeyword": "error"
			}
    }
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 4,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "ignore": [],
    "lineEnding": "lf",
    "lineWidth": 180
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "arrowParentheses": "always",
      "bracketSameLine": true,
      "quoteProperties": "preserve",
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "organizeImports": { "enabled": true }
}
