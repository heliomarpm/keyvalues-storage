# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180
end_of_line = lf

[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
quote_type = double

[*.{js,ts,html}]
indent_size = 4

[*.{js,ts}]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
